<header class="w-full h-24 border-red flex justify-between flex-col">
    <div class="w-full flex items-center justify-between">
        <div class="flex w-full items-center md:justify-center">
            {{> components/logo }}
            <div class="ml-2 flex flex-col">
                <h1 class="sombra-texto text-2xl font-bold sombra-texto text-justify">DOM GLASS</h1>
                <span class="text-lg w-full flex text-center lucida items-stretch sombra-texto tracking-widest text-justify">COBERTURAS</span>
            </div> 
        </div>
        <div id="menu-hamburguer" class="w-fit h-fit">
            <svg xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 -960 960 960" width="48"><path d="M120-240v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z" fill="white"/></svg>
        </div>
    </div>
</header>
<script type="module">
    const menuHamburguerIcon = document.getElementById('menu-hamburguer');
    const menuContainer = document.getElementById('menu');
    const closeMenuIcon = document.getElementById('close-menu');

    const showMenu = (e) => {
        menuContainer.classList.remove('close-menu');
        menuContainer.classList.add('show-menu');
    }

    const closeMenu = (e) => {
        menuContainer.classList.remove('show-menu');
        menuContainer.classList.add('close-menu');
    }

    closeMenuIcon.addEventListener('click', closeMenu);
    menuHamburguerIcon.addEventListener('click', showMenu);
</script>